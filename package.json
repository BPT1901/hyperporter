{
  "name": "hyperporter",
  "version": "1.1.2",
  "description": "HyperDeck recording management web application",
  "main": "./electron/main.js",
  "author": "Ben Turner",
  "license": "ISC",
  "build": {
    "appId": "com.hyperporter.app",
    "productName": "Hyperporter",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "files": [
      "client/build/**/*",
      "node_modules/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": ".",
        "filter": [
          "icon.*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cd client && npm run build && cd ..",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "nodemon server/index.js",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"yarn --cwd client start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder -mwl",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "format": "prettier -w ."
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "node-rtsp-stream": "^0.0.9",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.0.3",
    "prettier": "^3.4.2",
    "wait-on": "^7.0.1"
  }
}
