{
  "name": "hyperporter",
  "version": "1.1.2",
  "description": "HyperDeck recording management web application",
  "main": "./electron/main.js",
  "author": "Ben Turner",
  "license": "ISC",
  "build": {
    "appId": "com.hyperporter.app",
    "productName": "Hyperporter",
    "files": [
      "electron/**/*",
      "client/build/**/*",
      "server/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "asar": false,
    "extraResources": [
      {
        "from": "client/build",
        "to": "app/client/build"
      },
      {
        "from": "server",
        "to": "app/server"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cd client && npm run build && cd ..",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "nodemon server/index.js",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"yarn --cwd client start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "clean": "rimraf dist",
    "electron:build": "npm run build && electron-builder -mwl",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run clean && cross-env NODE_ENV=production npm run build && electron-builder --win --x64",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "cors": "^2.8.5",
    "electron-log": "^5.2.4",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.2.0",
    "node-rtsp-stream": "^0.0.9",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.10",
    "wait-on": "^7.0.1"
  }
}
